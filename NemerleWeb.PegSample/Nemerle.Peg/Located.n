    public static ExtractPosAndLen(msg : string) : int * int
    {
      // Hand parsing
      if (msg.Length >= 5 &&
        msg[0] == '[' && msg[msg.Length - 1] == ']' &&
        msg.Contains(":"))
       {   
        def errorPos = int.Parse(msg.Substring(1));
        def errorLen = int.Parse(msg.Substring(msg.IndexOf(':') + 1));
        
        (errorPos, errorLen)
      }
      else
        (-1, -1)
      
