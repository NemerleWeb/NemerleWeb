<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.splitter.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Action("NemerleWebJs", "NemerleWebResource")" type="text/javascript"></script>
	<script src="~/Scripts/deprecated.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.splitter.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
</head>
    <body>
        <div class="body-container">
            @RenderBody()
        </div>
        <script>
            $(function() {
                $(".page").splitter({
                    type: "v",
                    sizeLeft: 100,
                    dock: "left",
                    cookie: "rsdn-docksplitter",
                    dockKey: 'Z',
                    accessKey: 'I'
                });
            });
        </script>
    </body>
</html>
