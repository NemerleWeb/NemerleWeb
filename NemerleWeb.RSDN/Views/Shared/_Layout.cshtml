<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.splitter.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.11.3.min.js" type="text/javascript"></script>
    <!-- This should be done in NWebData-->
    <script src="@Url.Content("~/Scripts/jquery.signalR-1.2.0.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/deprecated.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/splitter.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
</head>
    <body>
        <div class="body-container">
            @RenderBody()
        </div>
        <script>
            $(function() {
                $(".page").splitter({
                    type: "v",
                    sizeLeft: 300,
                    dock: true,
                    dockKey: 'Z',
                    cookie: "rsdn-docksplitter",
                    //accessKey: 'I',
                    splitbarKey: 'I',
                    resizeToWidth: true
                });
            });
        </script>
    </body>
</html>
